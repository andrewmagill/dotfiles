"***********************
"Delete trailing whitespace on save
"***********************
function! s:RemoveTrailingWhitespaces()
  "Save last cursor position
  let l = line(".")
  let c = col(".")

  %s/\s\+$//ge

  call cursor(l,c)
endfunction
au BufWritePre * :call <SID>RemoveTrailingWhitespaces()

"***********************
"Toggle tabs / spaces F12
"***********************
function! TabToggle()
  if &expandtab
    set shiftwidth=2
    set softtabstop=2
    set noexpandtab
  else
    set shiftwidth=2
    set softtabstop=2
    set expandtab
  endif
endfunction
nmap <F12> mz:execute TabToggle()<CR>'z
