# system aliases
alias cp='cp -i'
alias groupsp='groups | sed "s/ /\n    /g"'
alias l='ls -CF'
alias ll='ls -l'
alias lla='ls -la'
alias mv='mv -i'
alias o='xdg-open'
alias r='reset'

# docker aliases
alias docker='sudo docker'
alias docker-compose='sudo docker-compose'

# git aliases
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# tmux aliases
alias tko='tmux kill-session -t'

# HUBzero aliases
alias bossk='ssh bossk'
